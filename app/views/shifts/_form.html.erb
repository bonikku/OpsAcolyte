<%= simple_form_for(@shift) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :center, { :include_blank => false } %>
    <%= f.input :start_time, :minute_step => 10 %>
    <br>
    <% Shift::DAYS_OF_WEEK.each do |day| %>
      <label>
        <%= f.check_box day %>
        <%= day.to_s.humanize %>
      </label>
      <br>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
