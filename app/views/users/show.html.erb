<div class="card">
  <div class="card-body">
    <b>Id: </b><%= link_to @user.id, user_path(@user) %>
    <br>
    <b>Email: </b><%= @user.email %>
    <br>
    <b>Sign in count: </b><%= @user.sign_in_count %>
    <br>
    <b>Current sign in at: </b><%= @user.current_sign_in_at %>
    <br>
    <b>Last sign in at: </b><%= @user.last_sign_in_at %>
    <br>
    <b>Current sign in IP: </b><%= @user.current_sign_in_ip %>
    <br>
    <b>Last sign in IP: </b><%= @user.last_sign_in_ip %>
    <br>
    <b>Locked at: </b><%= @user.locked_at %>
    <br>
    <b>Provider: </b><%= @user.provider %>
    <br>
    <b>Name: </b><%= @user.name %>
    <br>
    <b><%= 'uid'.humanize %>: </b><%= @user.uid %>
    <br>
    <b>Image: </b>
    <% if @user.image %>
      <%= image_tag @user.image, size: "50x50" %>
    <% end %>
    <br>
    <b>Roles: </b><%= @user.active_roles.join(", ").capitalize %>
    <br>
    <% if current_user.admin? %>
      <div class="mt-1">
        <%= link_to "Edit", edit_user_path(@user), class: "btn btn-sm btn-primary" %>
        <%= link_to ban_status(@user), ban_user_path(@user), method: :patch, class: "btn btn-sm btn-warning" %>
        <%= link_to "Delete", @user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
      </div>
    <% end %>
  </div>
  <div class="card-footer">
    <%= link_to "All users", users_path, class: "btn btn-sm btn-secondary" %>
  </div>
</div>