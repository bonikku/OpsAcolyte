<h3>
  <div class="text-center">
    Tasks
    <div class="badge badge-info">
      <%= @tasks.count %>
    </div>
    <%= link_to "New task", new_task_path, class: 'btn btn-primary' %>
  </div>
</h3>

<%= render 'tasks/calendar' %>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm table-light shadow">
    <thead>
    <tr>
      <th>Id</th>

      <th>Name</th>

      <th>Description</th>

      <th>Shift</th>

      <th>Center</th>

      <th>Status</th>

      <th>Start</th>

      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @tasks.each do |task| %>
      <%= content_tag :tr, id: dom_id(task), class: dom_class(task) do %>
        <td><%= link_to task.id, task %></td>

        <td><%= task.name %></td>

        <td><%= task.description %></td>

        <td><%= task.shift.name %></td>

        <td><%= task.center %></td>

        <td><%= task.status %></td>

        <td><%= task.start %></td>

        <td>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>
