<h3>
  <div class="text-center">
    Centers
    <div class="badge badge-info">
      <%= @centers.count %>
    </div>
    <%= link_to "New center", new_center_path, class: 'btn btn-primary' %>
  </div>
</h3>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm table-light shadow">
    <thead>
      <tr>
        <th>Id</th>
    	  
        <th>Name</th>
        
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @centers.each do |center| %>
        <%= content_tag :tr, id: dom_id(center), class: dom_class(center) do %>
          <td><%= link_to center.id, center %></td>
          
            <td><%= center.name %></td>
          
          <td>
            <%= link_to 'Edit', edit_center_path(center), class: 'btn btn-sm btn-warning' %>
            <%= link_to 'Destroy', center, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
